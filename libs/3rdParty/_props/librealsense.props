<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros" />
  <PropertyGroup />
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(SolutionDir)\..\..\libs\3rdParty\librealsense\include\;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link Condition="'$(Platform)'=='Win32'">
      <AdditionalLibraryDirectories>$(SolutionDir)\..\..\libs\3rdParty\librealsense\x86\lib\;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <AdditionalDependencies>realsense2.lib;realsense-file.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
    <Link Condition="'$(Platform)'=='x64'">
      <AdditionalLibraryDirectories>$(SolutionDir)\..\..\libs\3rdParty\librealsense\x64\lib\;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <AdditionalDependencies>realsense2.lib;realsense-file.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <ItemGroup />
  <ItemGroup Condition="'$(Platform)'=='Win32'">
   <PostBuildEvent>  
    <Command>xcopy $(SolutionDir)\..\..\libs\3rdParty\librealsense\x86\bin\*.dll "$(SolutionDir)..\..\build\bin\$(PlatformName)\$(Configuration)\"</Command>
    <Message>Making a copy of myproject.exe</Message>
   </PostBuildEvent>
  </ItemGroup>   
  <ItemGroup Condition="'$(Platform)'=='x64'">
   <PostBuildEvent>  
    <Command>xcopy $(SolutionDir)\..\..\libs\3rdParty\librealsense\x64\bin\*.dll "$(SolutionDir)..\..\build\bin\$(PlatformName)\$(Configuration)\"</Command>
    <Message>Making a copy of myproject.exe</Message>
   </PostBuildEvent>
  </ItemGroup> 
</Project>