<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros" />
  <PropertyGroup>
    <LibraryPath Condition="'$(Platform)'=='Win32'"> $(SolutionDir)\..\..\libs\3rdParty\librealsense2\x86\lib\;%(AdditionalLibraryDirectories)</LibraryPath>
    <LibraryPath Condition="'$(Platform)'=='x64'"> $(SolutionDir)\..\..\libs\3rdParty\librealsense2\x64\lib\;%(AdditionalLibraryDirectories)</LibraryPath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    
    <ClCompile>
      <AdditionalIncludeDirectories>$(SolutionDir)\..\..\libs\3rdParty\librealsense2\include\;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link >
      <AdditionalLibraryDirectories Condition="'$(Platform)'=='Win32'">$(SolutionDir)\..\..\libs\3rdParty\librealsense2\x86\lib\;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>    
      <AdditionalLibraryDirectories Condition="'$(Platform)'=='x64'">$(SolutionDir)\..\..\libs\3rdParty\librealsense2\x64\lib\;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <AdditionalDependencies>realsense2.lib;realsense-file.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
    <ItemGroup>
      <PostBuildEvent Condition="'$(Platform)'=='Win32'" >
        <Command>xcopy $(SolutionDir)\..\..\libs\3rdParty\librealsense2\x86\bin\*.dll "$(SolutionDir)..\..\build\bin\$(PlatformName)\$(Configuration)\"</Command>
      </PostBuildEvent>
      <PostBuildEvent Condition="'$(Platform)'=='x64'">
        <Command>xcopy $(SolutionDir)\..\..\libs\3rdParty\librealsense2\x64\bin\*.dll "$(SolutionDir)..\..\build\bin\$(PlatformName)\$(Configuration)\"</Command>
      </PostBuildEvent>
    </ItemGroup>
  </ItemDefinitionGroup>
</Project>